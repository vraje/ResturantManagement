<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.resturant_vasu.login">
    <EditText android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Username"
        android:textColor="@color/Maroon"
        android:background="@drawable/editcustom"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="115dp"
        android:paddingRight="115dp"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/et2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Maroon"
        android:hint="Enter Password"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="115dp"
        android:paddingRight="115dp"
        android:background="@drawable/editcustom"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Cream"
        android:textSize="20sp"
        android:text="LogIn"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="201dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/Maroon"
        android:text="Don't Have an Account Yet?"
        android:layout_marginTop="81dp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true" />
    <Button android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/Cream"
        android:text="Sign Up"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/tv1"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="34dp" />
    <TextView android:id="@+id/tv10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"/>
</RelativeLayout>
